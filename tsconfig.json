{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": "src",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": false,
    "noImplicitOverride": true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["jquery", "node"],
    "paths": {
      "@common/*": ["common/*"],
      "@client/*": ["client/*"]
    }
  },
  "include": [
    "src/global.mts",
    "src/common/utils/_module.mts",
    "src/common/primitives/_module.mts",
    "src/common/constants.mjs",
    "src/common/common/config.mjs",
    "src/client/**/*.mts",
    "src/common/abstract/ClientDocumentMixin.d.mts"
  ]
}
